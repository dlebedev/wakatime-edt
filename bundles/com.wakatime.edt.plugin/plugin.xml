<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.wakatime.edt.plugin.WakaTime">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.wakatime.edt.plugin.commands.category"
            name="Settings">
      </category>
      <command
            categoryId="com.wakatime.edt.plugin.commands.category"
            id="com.wakatime.edt.plugin.commands.menuCommand"
            name="API Key">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.wakatime.edt.plugin.MenuHandler"
            commandId="com.wakatime.edt.plugin.commands.menuCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.wakatime.edt.plugin.commands.menuCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:file?after=additions">
         <menu
               id="com.wakatime.edt.plugin.menu"
               label="WakaTime"
               mnemonic="M">
            <command
                  commandId="com.wakatime.edt.plugin.commands.menuCommand"
                  id="com.wakatime.edt.plugin.menu"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
